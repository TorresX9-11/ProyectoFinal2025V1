Options -Indexes

# Habilitar el motor de reescritura
RewriteEngine On

# Base del proyecto
RewriteBase /ProyectoFinal2025V1/test1/

# Proteger archivos sensibles
<FilesMatch "^(database_structure\.sql|\.env|config\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# No aplicar reglas a archivos y directorios existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todas las solicitudes al index.php en public
RewriteRule ^(.*)$ public/index.php [QSA,L]

# Permitir acceso a la carpeta public
<Directory "/public">
    Allow from all
</Directory>

# Configuración PHP básica
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_flag display_errors off
</IfModule>
