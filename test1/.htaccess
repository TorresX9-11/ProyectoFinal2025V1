# Denegar acceso a todos los archivos excepto los que están en public/
Options -Indexes
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger archivos sensibles
<FilesMatch "^(database_structure\.sql|\.env|config\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Redirigir todas las solicitudes a public/index.php excepto para archivos/directorios existentes
RewriteEngine On
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /public/$1 [L]

# Configuración PHP
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300
